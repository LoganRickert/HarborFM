{
  "name": "harborfm",
  "private": true,
  "version": "1.1.0",
  "description": "Open source podcast creator.",
  "scripts": {
    "dev": "pnpm run dev:server & pnpm run dev:web",
    "dev:server": "pnpm --filter server run dev",
    "dev:web": "pnpm --filter web run dev",
    "db:migrate": "pnpm --filter server run db:migrate",
    "db:clear-ip-bans": "pnpm --filter server run db:clear-ip-bans",
    "db:seed-analytics": "pnpm --filter server run db:seed-analytics",
    "db:seed-podcast-episodes": "pnpm --filter server run db:seed-podcast-episodes",
    "reset-password": "pnpm --filter server run reset-password",
    "deploy:pm2": "bash scripts/deploy-pm2.sh",
    "build": "pnpm --filter shared run build && pnpm --filter server run build && pnpm --filter web run build",
    "lint": "pnpm -r run lint",
    "staging": "pnpm --filter shared run build && pnpm --filter server run build && pnpm --filter web run staging && mkdir -p server/public && cp -R web/dist/* server/public && cd server && node dist/app.js",
    "db:migrate:test": "bash scripts/test-migrations.sh",
    "typecheck": "pnpm -r run typecheck",
    "build:openapi": "bash scripts/build-openapi.sh",
    "build:docs": "bash scripts/build-docs.sh",
    "docker:build": "docker build -t harborfm .",
    "e2e": "cd e2e && pnpm run e2e",
    "test": "pnpm run lint && pnpm run build && pnpm run e2e && pnpm run db:migrate:test"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "marked": "^17.0.1",
    "marked-gfm-heading-id": "^4.1.0",
    "swagger-ui-dist": "^5.31.0"
  }
}
